{{#if size}}
{{#match size "=" "large"}}
<article class="js-post-card__wrap c-post-card{{#if size}} c-post-card--{{size}}{{/if}}">
  <div class="c-post-card__media">
    <a href="{{ url }}" class="c-post-card__url--cover"></a>
    {{#if feature_image}}
    <div class="c-post-card__image--wrap">
      {{#match visibility "public"}}
        <span
            class="c-post-card__visibility">
            무료
        </span>
        {{/match}}
      <img
        class="c-post-card__image"
        alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
        src="{{img_url feature_image}}"
      />
    </div>
    {{/if}}
  </div>
  <div class="c-post-card__main">
    <div class="c-post-card__contents">
      
      {{#primary_tag}}
      <div class="c-post-card__tag">
        <div class="c-post-card__tag--name">
          <a class="c-post-card__tag--link" href="{{url}}">{{name}}</a>
        </div>
      </div>
      {{/primary_tag}}
      <h2 class="c-post-card__title">
        <a class="c-post-card__url" href="{{url}}">{{title}}</a>
      </h2>
      {{#if custom_excerpt}}
      <p class="c-post-card__excerpt">{{custom_excerpt}}</p>
      {{else}}
      <p class="c-post-card__excerpt">{{excerpt}}</p>
      {{/if}}
    </div>
    <div class="c-post-card__meta">
      {{#primary_author}}
      <div class="c-post-card__author">
        <div class="c-post-card__author--name">
          <a class="c-post-card__author--link" href="{{url}}">
            <span class="label">by</span><span class="text">{{name}}</span>
          </a>
        </div>
      </div>
      {{/primary_author}}
      
      <time class="c-post-card__date" datetime="{{ date format="YYYY-MM-DD" }}" title="{{ date format="YYYY년 M월 D일" }}">{{ date format="YYYY년 M월 D일" }}</time>
    </div>
  </div>
</article>
{{/match}}
