{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#tag}}
  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--4-4-s'>
      <div class='c-archive'>
        <h1 class='c-archive__title'>{{ name }}</h1>
        {{#if description}}
          <p class='c-archive__description'>{{ description }}</p>
        {{/if}}
      </div>
    </div>
  </div>
{{/tag}}

<div class='o-grid'>
  <div class='o-grid__col o-grid__col--4-4-s'>
    <div class="c-post-grid">
      {{> loop }}
    </div>
  </div>
</div>

<div class='o-grid'>
  {{ pagination }}
</div>